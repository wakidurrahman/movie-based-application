{
  "name": "movie-based-application",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A responsive, movie-browsing SPA built with React, TypeScript, Vite, Ant Design, and SCSS.",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "ant design",
    "scss",
    "vitest",
    "CI",
    "Atomic Design",
    "Redux",
    "Axios",
    "Ant Design",
    "SPA",
    "Responsive"
  ],
  "engines": {
    "node": ">=22.14.0 <23.0.0",
    "npm": "~10.8.2",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "author": "Wakidur Rahman",
  "scripts": {
    "dev": "vite --mode development",
    "build": "tsc && vite build --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.7.0",
    "antd": "^5.24.8",
    "axios": "^1.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.72.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  }
}
